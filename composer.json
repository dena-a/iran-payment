{
    "name": "dena-a/iran-payment",
    "description": "a Laravel package to handle Internet Payment Gateways for Iran Banking System",
    "type": "library",
    "homepage": "https://github.com/dena-a/iran-payment",
    "license": "MIT",
    "keywords": [
        "laravel",
        "iran",
        "payment",
        "gateway",
        "merchant",
        "purchase",
        "bank",
        "banking",
        "payment system",
        "pay",
        "saman",
        "sadad",
        "meli",
        "sep",
        "pay.ir",
        "zarinpal",
        "payping",
        "novinopay",
        "idpay"
    ],
    "authors": [
        {
            "name": "Dena Ajdari",
            "homepage": "https://github.com/dena-a"
        }, {
            "name": "YekNava",
            "homepage": "https://github.com/yeknava"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-soap": "*",
        "illuminate/support": "^5.7|^6.0|^7.0|^8.0|^9.0|^10.0",
        "illuminate/database": "^5.7|^6.0|^7.0|^8.0|^9.0|^10.0",
        "illuminate/http": "^5.7|^6.0|^7.0|^8.0|^9.0|^10.0",
        "nesbot/carbon": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "fakerphp/faker": "^1.4",
        "phpstan/phpstan": "^0.12.0@dev",
        "orchestra/testbench": "^6.0",
        "doctrine/dbal": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Dena\\IranPayment\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Dena\\IranPayment\\IranPaymentServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
